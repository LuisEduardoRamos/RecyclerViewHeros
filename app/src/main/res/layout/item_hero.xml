<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_item_hero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_camera" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_name"
                android:textSize="@dimen/text_item_size"/>

            <TextView
                android:id="@+id/text_item_super_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_super_power"
                android:textSize="@dimen/text_item_size"/>

            <TextView
                android:id="@+id/text_item_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_gender"
                android:textSize="@dimen/text_item_size"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_item_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.v7.widget.CardView>


